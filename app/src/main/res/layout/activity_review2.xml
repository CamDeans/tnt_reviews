<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:backgroundTint="#00ffffff"
    android:weightSum="100"
    tools:context=".Review2Activity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardReviews"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        app:cardBackgroundColor="#00ffffff"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <GridLayout
            android:layout_width="333dp"
            android:layout_height="270dp"
            android:layout_below="@+id/titleHome"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:columnCount="3"
            android:rowCount="1">

            <ImageView
                android:layout_width="29dp"
                android:layout_height="37dp" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="33.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/isTickCountLabel"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:hint="Tick Count"
                    android:shadowColor="@color/teal_200"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/isTokenCountLabel"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:hint="Token Count"
                    android:shadowColor="@color/teal_200"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/isReviewLabel"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/textview2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Review"
                    android:shadowColor="@color/teal_200"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="33.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/isTickCount"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:hint="Ticks"
                    android:shadowColor="@color/teal_200"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite" />

                <TextView
                    android:id="@+id/isTokenCount"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:hint="Tokens"
                    android:shadowColor="@color/teal_200"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite" />

                <TextView
                    android:id="@+id/isReview"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:hint="Message"
                    android:shadowColor="@color/teal_200"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite" />
            </LinearLayout>
        </GridLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>