<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:backgroundTint="#00ffffff"
    android:weightSum="100"
    tools:context=".ReviewActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardReviews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        app:cardBackgroundColor="#00ffffff"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <GridLayout
            android:layout_width="333dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/titleHome"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:columnCount="3"
            android:rowCount="1">

            <ImageView
                android:id="@+id/homeBtn"
                android:layout_width="29dp"
                android:layout_height="37dp" />

            <TextView
                android:id="@+id/isReview"
                android:layout_width="14dp"
                android:layout_height="240dp"
                android:layout_weight="66.6"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" />

            <LinearLayout
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_weight="33.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/isChildName"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:hint="Name"
                    android:shadowColor="@color/teal_200"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/isChildAge"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:hint="Age"
                    android:shadowColor="@color/teal_200"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite" />

                <TextView
                    android:id="@+id/isChore1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/textview2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Chore 1"
                    android:shadowColor="@color/teal_200"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite" />

                <TextView
                    android:id="@+id/isChore2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:hint="Chore 2"
                    android:shadowColor="@color/teal_200"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite" />

                <TextView
                    android:id="@+id/isChore3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/textview2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Chore 3"
                    android:shadowColor="@color/teal_200"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite" />

                <TextView
                    android:id="@+id/isTntNumberSelection"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:hint="TNT Number Selection"
                    android:shadowColor="@color/teal_200"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite" />

                <TextView
                    android:id="@+id/isAward"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/textview2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Award"
                    android:shadowColor="@color/teal_200"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite" />

                <TextView
                    android:id="@+id/isPunishment"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/textview2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Punishment"
                    android:shadowColor="@color/teal_200"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite" />
            </LinearLayout>
        </GridLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>